        {{#each post}}
        <div class="categorieIndex">

            <div class="titleCategorie">
                <h2 name="title">{{this._id}}</h2>
            </div>

            {{#each this.articles}}   
            <div class="articleIndex">
                <img src="{{this.image}}" alt="">
                <div class="contentIndexArticle">
                    <h3 name="title">{{this.title}}</h3>
                    <p class="textIndexArticle" name="content">{{this.content}}</p>
                    <p class="authorIndexArticle" name="author">{{this.author}}</p>
                    <a href="/article/edit/{{this.id}}">Modifier article</a>
